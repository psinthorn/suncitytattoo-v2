<p id="notice"><%= notice %></p>

<h1>Whies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whies.each do |why| %>
      <tr>
        <td><%= why.title %></td>
        <td><%= why.body %></td>
        <td><%= why.status %></td>
        <td><%= why.user_id %></td>
        <td><%= link_to 'Show', why %></td>
        <td><%= link_to 'Edit', edit_why_path(why) %></td>
        <td><%= link_to 'Destroy', why, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Why', new_why_path %>
