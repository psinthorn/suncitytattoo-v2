<div class="mt-5">
<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong> <%= form.label :title %> </strong>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <b><%= form.label :subtitle %></b>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="form-group">
    <b><%= form.label :body %></b>
    <%= form.text_area :body, rows: 8, class: "form-control" %>
  </div>

  <div class="form-field">
    <b><%= form.label :image %></b>
    <%= form.file_field :image, class: "form-control btn btn"  %>

    <% if @blog.new_record?  %>
    <p class="mt-3">Please upload image</p>
    <% else %>
    <p class="mt-3">Current Image</p>
    <%= image_tag blog.thumbnail unless @blog.thumbnail.nil? %>
    <% end %>

  </div>

  <div class="form-group mt-5">
    <b><%= form.label :status %></b>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="actions">
      
      <div class="btn-inline">
      <%= form.submit(@blog.new_record? ? "Create" : "Update" ,class: "btn btn-secondary text-right") %>
      <%# <%= link_to 'Show', @blog, class: "btn btn-secondary" %> 
      <%= link_to 'Back', blogs_path, class: "btn btn-secondary" %> 
      </div>
  </div>
<% end %>
</div>
